{
  "name": "belix",
  "version": "1.0.0",
  "description": "Production-grade Discord bot with advanced logging, rate limiting, and caching",
  "main": "index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development node index.js",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t belix-bot:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f belix-bot",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "discord",
    "discord-bot",
    "discord.js",
    "bot",
    "production",
    "logging",
    "caching"
  ],
  "author": "BeliX Team",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.93.3",
    "chrono-node": "^2.7.7",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "winston": "^3.11.0",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "pm2": "^5.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  }
}
