# ========== DISCORD CONFIGURATION ==========

# Discord Bot Token (required)
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Guild ID (server where bot operates)
GUILD_ID=your_guild_id_here

# ========== DATABASE CONFIGURATION ==========

# Supabase (PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========== CHANNEL IDs ==========

# Introduction/Welcome channel
introduction=your_channel_id_here

# Announcements channel
announcements=your_channel_id_here

# Common Hall channel
common-hall=your_channel_id_here

# Tinkering channel
tinkering=your_channel_id_here

# Vibe Coding channel
vibe-coding=your_channel_id_here

# Chamber of Cheers channel
chamber-of-cheers=your_channel_id_here

# Reports channel (for vibe code reports)
reports=1475575831601610862

# ========== VOICE CHANNELS ==========

# Meeting Voice Channel
MEETING_VOICE_CHANNEL_ID=your_voice_channel_id_here

# Meeting Text Channel
MEETING_TEXT_CHANNEL_ID=your_text_channel_id_here

# ========== PRODUCTION CONFIGURATION ==========

# Environment: production, development
NODE_ENV=production

# Server port (for Express API)
PORT=3000

# Bot version (for tracking)
APP_VERSION=1.0.0

# ========== LOGGING CONFIGURATION ==========

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Console output level override
CONSOLE_LOG_LEVEL=warn

# ========== RATE LIMITING CONFIGURATION ==========

# These can also be customized in config/constants.js
# Cooldown times are in milliseconds
# Examples: 3000 = 3 seconds, 5000 = 5 seconds

# ========== CACHING CONFIGURATION ==========

# Enable/disable caching system
# CACHING_ENABLED=true

# Cache TTLs (in milliseconds) - configure in config/constants.js
# Leaderboard: 5 minutes
# Daily question: 24 hours
# Terminology: 24 hours

# ========== REDIS CONFIGURATION (Optional) ==========

# Enable Redis for distributed caching (sharded deployments)
REDIS_ENABLED=false

# Redis URL
REDIS_URL=redis://localhost:6379

# Redis password (if required)
REDIS_PASSWORD=your_redis_password_here

# ========== SHARDING CONFIGURATION ==========

# Enable Discord.js sharding (for very large bots)
ENABLE_SHARDING=false

# Number of shards (set automatically if using sharding)
SHARD_COUNT=2

# Shards per process
SHARDS_PER_PROCESS=2

# ========== MONITORING & ALERTS ==========

# Discord webhook for error alerts
# Get from: Discord Server > Channel > Create Webhook
ERROR_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# ========== ROLES CONFIGURATION ==========

# Rookie role name (case-insensitive)
ROOKIE_ROLE_NAME=rookies

# ========== TIMEZONE ==========

# Timezone for scheduling (e.g., Asia/Kolkata, America/New_York)
TZ=Asia/Kolkata

# ========== PM2 CONFIGURATION ==========

# Use PM2 for process management
USE_PM2=true

# PM2 instances (1, 2, 'max' for CPU count)
PM2_INSTANCES=1

# ========== OPTIONAL: TRUST PROXY ==========

# Set to true if behind reverse proxy (Nginx, HAProxy)
TRUST_PROXY=false

# ========== SCHEDULED JOBS ==========

# Meeting reminder timing
MEETING_PROMPT_HOUR=18
MEETING_PROMPT_MINUTE=30

# Idle time before ending meeting (minutes)
MEETING_END_IDLE_MINUTES=5

# ========== NOTES ==========

# 1. For production deployment:
#    - Always set NODE_ENV=production
#    - Use strong database credentials
#    - Set LOG_LEVEL=warn or higher
#    - Configure ERROR_WEBHOOK_URL for alerts
#
# 2. For sharded deployment:
#    - Set ENABLE_SHARDING=true
#    - Set SHARD_COUNT based on server count
#    - Enable REDIS_ENABLED=true for shared cache
#
# 3. For distributed deployment:
#    - Use Docker (docker-compose.yml provided)
#    - Configure Redis for cache sharing
#    - Use PM2 cluster mode
#
# 4. Keep .env file secret:
#    - Never commit to git
#    - Use strong tokens and keys
#    - Rotate credentials regularly

